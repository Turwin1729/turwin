{
  "openapi": "3.0.0",
  "info": {
    "title": "Turwin Medical Center API",
    "description": "API documentation for Turwin Medical Center's vulnerable patient management system",
    "version": "1.0.0",
    "contact": {
      "name": "Turwin Medical Center"
    }
  },
  "servers": [
    {
      "url": "http://localhost:1730",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "summary": "User login",
        "description": "Authenticate a user and return their details",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "summary": "Register new user",
        "description": "Create a new user account",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/api/users/patients": {
      "get": {
        "summary": "Get all patients",
        "description": "Retrieve a list of all patients (vulnerable - no authentication required)",
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "List of patients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users/{userId}": {
      "patch": {
        "summary": "Update user profile",
        "description": "Update user information (vulnerable - no authentication check)",
        "tags": ["Users"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/api/test-results": {
      "post": {
        "summary": "Create test result",
        "description": "Create a new test result (vulnerable - no role validation)",
        "tags": ["Test Results"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TestResultRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Test result created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TestResult"
                }
              }
            }
          }
        }
      }
    },
    "/api/test-results/{patientId}": {
      "get": {
        "summary": "Get patient test results",
        "description": "Get all test results for a patient (vulnerable - no access control)",
        "tags": ["Test Results"],
        "parameters": [
          {
            "name": "patientId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of test results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TestResult"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/upload-image/{userId}": {
      "post": {
        "summary": "Upload image",
        "description": "Upload an image for a user or test result (vulnerable - no file validation)",
        "tags": ["Images"],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "image": {
                    "type": "string",
                    "format": "binary"
                  },
                  "test_result_id": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image_path": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["username", "password", "role"],
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "role": {
            "type": "string",
            "enum": ["doctor", "patient"]
          }
        }
      },
      "UserUpdateRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["doctor", "patient"]
          },
          "profile_image": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "TestResultRequest": {
        "type": "object",
        "required": ["patient_id", "doctor_id", "test_type", "result"],
        "properties": {
          "patient_id": {
            "type": "integer"
          },
          "doctor_id": {
            "type": "integer"
          },
          "test_type": {
            "type": "string"
          },
          "result": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "TestResult": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "patient_id": {
            "type": "integer"
          },
          "doctor_id": {
            "type": "integer"
          },
          "test_type": {
            "type": "string"
          },
          "result": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "image_path": {
            "type": "string",
            "nullable": true
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Authentication",
      "description": "User authentication endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    },
    {
      "name": "Test Results",
      "description": "Medical test results management"
    },
    {
      "name": "Images",
      "description": "Image upload endpoints"
    }
  ],
  "security": []
}
